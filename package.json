{
	"$scheme": "https://json.schemastore.org/package.json",
	"name": "aqued",
	"version": "4.0.0-beta",
	"description": "Discord Bot",
	"author": "aqued-dev",
	"license": "MIT",
	"type": "module",
	"scripts": {
		"lint": "prettier --check . && eslint --ext .ts --format=pretty",
		"lint:fix": "prettier --write . && eslint --fix --format=pretty",
		"build": "rimraf dist && tsc",
		"start": "node dist/src/main.js",
		"migration:generate": "pnpm build && typeorm migration:generate -d dist/src/core/typeorm.config.js src/database/migration/DataBase",
		"migration:run": "pnpm build && typeorm migration:run -d dist/src/core/typeorm.config.js",
		"prepare": "husky"
	},
	"dependencies": {
		"discord.js": "14.18.0",
		"json-bigint": "^1.0.0",
		"mongoose": "^8.10.0",
		"mysql2": "^3.12.0",
		"pino": "^9.6.0",
		"pino-abstract-transport": "^2.0.0",
		"pino-pretty": "^13.0.0",
		"reflect-metadata": "^0.2.2",
		"typeorm": "^0.3.20",
		"typescript": "5.7.3"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.7.1",
		"@commitlint/config-conventional": "^19.7.1",
		"@eslint/js": "^9.20.0",
		"@types/json-bigint": "^1.0.4",
		"@types/node": "^22.13.4",
		"eslint": "^9.20.1",
		"eslint-config-prettier": "^10.0.1",
		"eslint-formatter-pretty": "^6.0.1",
		"eslint-plugin-unicorn": "^56.0.1",
		"globals": "^15.15.0",
		"husky": "^9.1.7",
		"prettier": "3.5.1",
		"rimraf": "^6.0.1",
		"typescript-eslint": "^8.24.0"
	},
	"engines": {
		"node": ">=20.11.0"
	},
	"volta": {
		"node": "22.12.0",
		"pnpm": "9.15.1"
	}
}
