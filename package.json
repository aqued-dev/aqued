{
	"$scheme": "https://json.schemastore.org/package.json",
	"name": "aqued",
	"version": "3.5.0-beta",
	"description": "Discord Bot",
	"author": "aqued-dev",
	"license": "MIT",
	"type": "module",
	"scripts": {
		"lint": "prettier --check . && eslint --ext .ts --format=pretty",
		"lint:fix": "prettier --write . && eslint --fix --format=pretty",
		"build": "rimraf dist && tsc",
		"start": "node dist/src/main.js",
		"migration:generate": "pnpm build && typeorm migration:generate -d dist/src/core/typeorm.config.js src/migration/DataBase",
		"migration:run": "pnpm build && typeorm migration:run -d dist/src/core/typeorm.config.js",
		"prepare": "husky"
	},
	"dependencies": {
		"discord.js": "14.16.3",
		"json-bigint": "^1.0.0",
		"mongoose": "^8.9.2",
		"mysql2": "^3.12.0",
		"pino": "^9.6.0",
		"pino-abstract-transport": "^2.0.0",
		"pino-pretty": "^13.0.0",
		"reflect-metadata": "^0.2.2",
		"typeorm": "^0.3.20",
		"typescript": "5.7.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.6.1",
		"@commitlint/config-conventional": "^19.6.0",
		"@types/json-bigint": "^1.0.4",
		"@types/node": "^22.10.2",
		"eslint": "^9.17.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-formatter-pretty": "^6.0.1",
		"eslint-plugin-unicorn": "^56.0.1",
		"globals": "^15.14.0",
		"husky": "^9.1.7",
		"prettier": "3.4.2",
		"rimraf": "^6.0.1",
		"typescript-eslint": "^8.18.2"
	},
	"engines": {
		"node": ">=20.11.0"
	},
	"volta": {
		"node": "22.12.0",
		"pnpm": "9.15.1"
	}
}
