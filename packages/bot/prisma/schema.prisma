generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Ai {
  channelId String @id @map("_id")
}

model AiThread {
  id       String            @id
  historys AiThreadHistory[]
}

model AiThreadHistory {
  id          Int    @id @unique @default(autoincrement())
  userContent String @db.Text

  aiContent String @db.Text

  AiThread   AiThread? @relation(fields: [aiThreadId], references: [id])
  aiThreadId String?
}

model EarthQuakeAlert {
  channelId String @id @map("_id")
}
